name: Build
on:
  push:
    branches:
      - "*"
  pull_request:
  workflow_dispatch:
    inputs:
      logLevel:
        description: 'Log level'
        required: true
        default: 'warning'

jobs:
  Compile:
  Package:
    needs: Compile
  test_integration:
    needs: Package
    strategy:
      matrix:
        Plan: [ubuntu16, ubuntu18, rhel7, rhel8, debian9, centos7, centos8, awslinux2]
    steps:
    - name: Run tests
      env:
        PLAN: ${{matrix.Plan}}
      run: echo "hi"
  Build:
    runs-on: ubuntu-latest
    needs: [Compile, Package, test_integration]
